{
  "name": "fast-bmp",
  "version": "2.0.1",
  "description": "A bmp image encoder",
  "main": "./lib/index.js",
  "module": "./lib-esm/index.js",
  "types": "./lib/index.d.ts",
  "repository": "git@github.com:image-js/fast-bmp.git",
  "author": "Daniel Kostro <kostro.d@gmail.com>",
  "license": "MIT",
  "files": [
    "src",
    "lib",
    "lib-esm"
  ],
  "dependencies": {
    "iobuffer": "^5.4.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.26.3",
    "@babel/preset-typescript": "^7.26.0",
    "@types/jest": "^29.5.14",
    "eslint": "^9.21.0",
    "eslint-config-cheminfo-typescript": "^17.0.0",
    "jest": "^29.1.1",
    "prettier": "^2.7.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "eslint": "eslint src",
    "eslint-fix": "eslint --fix src",
    "prettier": "prettier --check src",
    "prettier-write": "prettier --write src",
    "test": "npm run test-only && npm run eslint && npm run prettier && npm run check-types",
    "test-only": "jest --coverage",
    "test-write": "FAST_BMP_WRITE_DATA_FILES=1 npm run test-only",
    "check-types": "tsc --noEmit",
    "clean": "rimraf lib lib-esm",
    "prepack": "npm run tsc",
    "tsc": "npm run clean && npm run tsc-cjs && npm run tsc-esm",
    "tsc-cjs": "tsc --project tsconfig.cjs.json",
    "tsc-esm": "tsc --project tsconfig.esm.json"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
